{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}
<header class="panel-heading text-center">
            Iniciar Sesi√≥n
          </header>
<form action="{{ path("fos_user_security_check") }}" method="post" class="panel-body">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    
    <div class="form-group">
        <label for="username" class="control-label">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"  class="form-control" />
    </div>
    <div class="form-group">
        <label for="password" class="control-label">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="password" name="_password" required="required"  class="form-control" />
    </div>
    <div class="checkbox">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
    </div>
    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-info" />
</form>
{% endblock fos_user_content %}
